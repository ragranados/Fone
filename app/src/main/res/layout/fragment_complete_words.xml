<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"

              tools:context=".fragments.Complete_words">


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="40sp" android:orientation="vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="N/A" android:layout_gravity="center"

                  android:id="@+id/tv_cont"  android:visibility="invisible"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:id="@+id/tv_aux" android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="40sp" android:orientation="vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_gravity="center"
                  android:text="Â¡Completa la palabra!" android:textSize="20sp" android:id="@+id/tv_info"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="40sp" android:orientation="vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_gravity="center" android:textSize="20sp"
                  android:text="" android:id="@+id/tv_word"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center" android:layout_gravity="center" android:layout_margin="40sp" android:orientation="horizontal">
        <LinearLayout android:layout_width="wrap_content" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_margin="15sp" android:orientation="vertical">

            <TextView android:layout_width="25sp" android:layout_margin="10sp" android:textSize="20sp"
                      android:layout_height="wrap_content" android:text="" android:id="@+id/opc1"
                      android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_margin="15sp" android:orientation="vertical">

            <TextView android:layout_width="25sp" android:layout_margin="10sp" android:textSize="20sp"
                      android:layout_height="wrap_content" android:text="" android:id="@+id/opc2"
                      android:layout_gravity="center"/>
        </LinearLayout>





    </LinearLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5sp" android:orientation="vertical">

        <Button
            android:id="@+id/btn_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Iniciar"
            android:textSize="20sp" />

    </LinearLayout>









</LinearLayout>

