<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".activities.AccesibilityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
                android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/robotobold"
            android:textSize="35sp"
            android:background="@drawable/pergamino"
            android:layout_width="match_parent"
            android:paddingLeft="105dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content"
            android:text="Accesibilidad" />

        <TextView
                android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:text="Velocidad de la voz" />

        <SeekBar
                android:layout_gravity="center"
            android:id="@+id/velocidad_voz"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:progress="50" />

        <TextView
                android:fontFamily="@font/robotobold"
            android:layout_marginTop="40dp"
                android:textSize="25sp"
                android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tono de la voz" />

        <SeekBar

            android:id="@+id/tono_voz"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:progress="50" />

        <Button android:layout_marginTop="30dp"
            android:id="@+id/settings_save"
                android:layout_gravity="center"
            android:text="Guardar" android:backgroundTint="@color/darkBlue"
            android:layout_width="wrap_content"
            android:fontFamily="@font/robotobold"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>