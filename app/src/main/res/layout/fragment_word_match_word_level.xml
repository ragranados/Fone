<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/background1"
             tools:context=".fragments.WordMatchWordLevelFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
        <TextView
            android:id="@+id/indicaciones"
            android:textColor="#000"
            android:background="@drawable/soundicon"
            android:textStyle="bold"
            android:layout_marginLeft="150dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="105dp">

            <TextView
                android:id="@+id/titulo_nivel"
                android:fontFamily="@font/athfont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="Nivel 1"
                android:textColor="@color/darkBlue"
                android:textSize="50dp"/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/txt1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pergamino"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:text="palabra 1"
                    android:textColor="@color/darkBlue"
                    android:textSize="35sp"/>

            <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent"></LinearLayout>

            <TextView
                    android:textSize="35sp"
                    android:paddingLeft="60dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/darkBlue"
                    android:id="@+id/txt5"
                    android:textStyle="bold"
                    android:background="@drawable/pergamino"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/txt2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="50dp"
                    android:background="@drawable/pergamino"
                    android:gravity="center"
                    android:minWidth="120dp"
                android:paddingBottom="15dp"
                android:textStyle="bold"
                    android:text="palabra 2"
                    android:textColor="@color/darkBlue"
                    android:textSize="@dimen/word_match_word_text_size_portrait"/>

            <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent"></LinearLayout>

            <TextView
                    android:textSize="35sp"
                    android:id="@+id/txt6"
                    android:background="@drawable/pergamino"
                    android:layout_width="150dp"
                android:paddingLeft="60dp"
                android:textStyle="bold"
                android:paddingBottom="15dp"
                android:textColor="@color/darkBlue"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/txt3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pergamino"
                    android:gravity="center"
                    android:minWidth="120dp"
                    android:textStyle="bold"
                    android:text="palabra 3"
                android:paddingBottom="15dp"
                    android:textColor="@color/darkBlue"
                    android:textSize="@dimen/word_match_word_text_size_portrait"/>

            <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent"></LinearLayout>

            <TextView
                    android:textSize="35sp"
                    android:id="@+id/txt7"
                    android:layout_width="150dp"
                android:paddingLeft="60dp"
                android:textStyle="bold"
                android:paddingBottom="15dp"
                android:textColor="@color/darkBlue"
                    android:background="@drawable/pergamino"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/txt4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pergamino"
                    android:gravity="center"
                    android:minWidth="120dp"
                android:paddingBottom="15dp"
                    android:text="palabra 3"
                    android:textStyle="bold"
                    android:textColor="@color/darkBlue"
                    android:textSize="@dimen/word_match_word_text_size_portrait"/>

            <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent"></LinearLayout>

            <TextView
                    android:textSize="35sp"
                    android:id="@+id/txt8"
                    android:layout_width="150dp"
                    android:paddingLeft="60dp"
                    android:paddingBottom="15dp"
                android:textStyle="bold"
                    android:textColor="@color/darkBlue"
                    android:background="@drawable/pergamino"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
                android:layout_marginTop="35dp"
                android:id="@+id/evaluar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:fontFamily="@font/athfont"
                android:backgroundTint="@color/darkBlue"
                android:text="Evaluar"/>


    </LinearLayout>

</FrameLayout>